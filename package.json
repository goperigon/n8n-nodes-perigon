{
	"name": "@goperigon/n8n-nodes-perigon",
	"version": "0.1.0",
	"description": "Official n8n community node for the Perigon API - Access AI-powered news articles, stories, companies, people, journalists, sources, topics, Wikipedia data, and AI-powered summarization",
	"license": "MIT",
	"homepage": "https://www.perigon.io",
	"keywords": [
		"n8n-community-node-package"
	],
	"author": {
		"name": "Islem Maboud",
		"email": "islem@perigon.io"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/goperigon/n8n-nodes-perigon"
	},
	"scripts": {
		"build": "n8n-node build",
		"build:watch": "tsc --watch",
		"dev": "node dev-server.js",
		"dev:cli": "n8n-node dev",
		"lint": "n8n-node lint",
		"lint:fix": "n8n-node lint --fix",
		"release": "n8n-node release",
		"prepublishOnly": "n8n-node prerelease"
	},
	"files": [
		"dist"
	],
	"n8n": {
		"n8nNodesApiVersion": 1,
		"credentials": [
			"dist/credentials/PerigonApi.credentials.js"
		],
		"nodes": [
			"dist/nodes/Perigon/Perigon.node.js"
		]
	},
	"devDependencies": {
		"@n8n/node-cli": "*",
		"eslint": "9.32.0",
		"prettier": "3.6.2",
		"release-it": "^19.0.4",
		"typescript": "5.9.2"
	},
	"peerDependencies": {
		"n8n-workflow": "*"
	},
	"packageManager": "pnpm@8.7.1+sha1.cb9fb56ca170a718619cd9bc669d99ddadc1afb5"
}
